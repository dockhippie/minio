{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>dockhippie/.github//renovate/preset"
    ],
    "packageRules": [
        {
            "description": "Update golang docker images",
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "enabled": true,
            "automerge": true
        }
    ]
}
